@model FitnessPlatform.Web.ViewModels.DailyLog.DailyLogVM
@{
    ViewData["Title"] = "My Daily Log";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">My Daily Log - @Model.Date.ToString("dd MMMM yyyy")</h2>

        <form asp-controller="DailyLog" asp-action="MyLog" method="get" class="d-flex align-items-center">
            <input type="date" name="date" class="form-control me-2" value="@Model.Date.ToString("yyyy-MM-dd")" />
            <button type="submit" class="btn btn-outline-secondary">View</button>
        </form>
        <form asp-controller="DailyLog" asp-action="MyLog" method="get">
            <button type="submit" class="btn btn-outline-primary">Today</button>
        </form>
    </div>

    <div class="row">
        <!-- Meals Section -->
        <div class="col-md-6 mb-4">
            <div class="card shadow-sm">
                <div class="card-header d-flex justify-content-between align-items-center bg-light">
                    <h5 class="mb-0">🍽️ Meals</h5>
                    @if (User?.Identity?.IsAuthenticated == true && User.IsInRole("User"))
                    {
                        <a asp-controller="Food" asp-action="Add" class="btn btn-success btn-sm">+ Add Meal</a>
                    }
                    
                </div>
                <ul class="list-group list-group-flush">
                    @if (Model.Foods.Any())
                    {
                        @foreach (var meal in Model.Foods)
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <div>
                                    <strong>@meal.Description</strong> – @meal.Calories calories
                                </div>
                                @if (User?.Identity?.IsAuthenticated == true && User.IsInRole("User"))
                                {
                                    <form asp-controller="Food" asp-action="Delete" asp-route-id="@meal.Id" method="post" class="mb-0">
                                        <button type="submit" class="btn btn-sm btn-danger">🗑 Delete</button>
                                    </form>
                                }
                               
                            </li>
                        }
                    }
                    else
                    {
                        <li class="list-group-item text-muted">No meals recorded for this day.</li>
                    }
                </ul>
            </div>
        </div>

        <!-- Workouts Section -->
        <div class="col-md-6 mb-4">
            <div class="card shadow-sm">
                <div class="card-header d-flex justify-content-between align-items-center bg-light">
                    <h5 class="mb-0">🏋️ Workouts</h5>
                    @if (User?.Identity?.IsAuthenticated == true && User.IsInRole("User"))
                    {
                        <a asp-controller="Workout" asp-action="Add" class="btn btn-primary btn-sm">+ Add Workout</a>
                        
                    }
                    
                </div>
                <div class="card-body">
                    @if (Model.Workouts.Any())
                    {
                        @foreach (var workout in Model.Workouts)
                        {
                            <div class="mb-3 border rounded p-3 bg-light">
                                @foreach (var entry in workout.Entries)
                                {
                                    <div class="d-flex justify-content-between align-items-center mb-2">
                                        <div>
                                            <strong>@entry.Exercise</strong><br />
                                            @if (entry.Sets != null && entry.Repetitions != null)
                                            {
                                                <small>@entry.Sets sets × @entry.Repetitions reps</small>
                                            }
                                            @if (entry.WeightKg != null)
                                            {
                                                <small> | @entry.WeightKg kg</small>
                                            }
                                            @if (entry.DistanceKm != null)
                                            {
                                                <small> | @entry.DistanceKm km</small>
                                            }
                                        </div>
                                        @if (User?.Identity?.IsAuthenticated == true && User.IsInRole("User"))
                                        {
                                            <form asp-controller="Workout" asp-action="DeleteEntry" asp-route-id="@entry.Id" method="post" class="mb-0">
                                                <button type="submit" class="btn btn-sm btn-danger">🗑 Delete</button>
                                            </form>
                                        }
                                        
                                    </div>
                                }
                            </div>
                        }
                    }
                    else
                    {
                        <p class="text-muted">No workouts recorded for this day.</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>