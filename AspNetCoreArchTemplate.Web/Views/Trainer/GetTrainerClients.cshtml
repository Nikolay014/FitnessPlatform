@using FitnessPlatform.Web.ViewModels.Trainer
@model TrainerClientsVM

@{
    ViewData["Title"] = "Users";
}

<div class="container mt-5">
    <h2 class="text-center mb-4"> Users in @Model.TrainerName </h2>

    @foreach (var user in @Model.Clients)
    {
        <div class="card mb-3 shadow-sm rounded user-card">
            <div class="card-body d-flex align-items-center justify-content-between">
                <div class="d-flex align-items-center">
                    <img src="@(string.IsNullOrEmpty(user.Image) ? Url.Content("~/images/default-avatar.jpg") : user.Image)"
                         class="rounded-circle me-3"
                         style="width: 60px; height: 60px; object-fit: cover;" alt="Avatar" />

                    <div>
                        <h5 class="mb-1">@user.FullName</h5>
                        <p class="mb-1"><strong>Gender:</strong> @user.Gender</p>
                        <p class="mb-0"><strong>Phone:</strong> @user.PhoneNumber</p>
                    </div>
                </div>

                <div class="text-end">
                    <a asp-controller="User" asp-action="Details" asp-route-id="@user.Id" class="btn btn-warning btn-sm me-2">
                        <i class="fas fa-edit"></i> Details
                    </a>

                </div>
            </div>
        </div>
    }
</div>
