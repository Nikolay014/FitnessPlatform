@using FitnessPlatform.Web.ViewModels.Trainer
@model PaginatedTrainersVM

@{
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger text-center">
            @TempData["ErrorMessage"]
        </div>
    }

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success text-center">
            @TempData["SuccessMessage"]
        </div>
    }
}

<div class="container mt-5">
    <h2 class="text-center mb-4">All Trainers</h2>

    <form method="get" asp-controller="Trainer" asp-action="AllTrainers" class="mb-4">
        <div class="row g-3 align-items-end">

            <div class="col-md-4">
                <label for="gymId" class="form-label">Избери зала</label>
                <select name="gymId" class="form-select">
                    <option value="">Всички зали</option>
                    @foreach (var gym in Model.Gyms)
                    {
                        <option value="@gym.Value" selected="@(Model.SelectedGymId?.ToString() == gym.Value)">
                            @gym.Text
                        </option>
                    }
                </select>
            </div>

            <div class="col-md-4">
                <label for="specialtyId" class="form-label">Избери специалност</label>
                <select name="specialtyId" class="form-select">
                    <option value="">Всички специалности</option>
                    @foreach (var specialty in Model.Specialties)
                    {
                        <option value="@specialty.Value" selected="@(Model.SelectedSpecialtyId?.ToString() == specialty.Value)">
                            @specialty.Text
                        </option>
                    }
                </select>
            </div>

            <div class="col-md-4">
                <button type="submit" class="btn btn-primary w-100">🔍 Филтрирай</button>
            </div>

        </div>
    </form>

    @foreach (var trainer in Model.Trainers)
    {
        <div class="card mb-3 shadow-sm rounded user-card">
            <div class="card-body d-flex align-items-center justify-content-between">
                <div class="d-flex align-items-center">
                    <img src="@(string.IsNullOrEmpty(trainer.Image) ? Url.Content("~/images/default-avatar.jpg") : trainer.Image)"
                         class="rounded-circle me-3"
                         style="width: 60px; height: 60px; object-fit: cover;" alt="Avatar" />

                    <div>
                        <h5 class="mb-1">@trainer.FullName</h5>
                        <p class="mb-1"><strong>Gym:</strong> @trainer.Gym</p>
                        <p class="mb-1"><strong>Specialty:</strong> @trainer.Specialty</p>
                        <p class="mb-0"><strong>Phone:</strong> @trainer.PhoneNumber</p>
                    </div>
                </div>
                @if (User.IsInRole("Admin"))
                {
                    <div class="text-end">
                        <a asp-controller="Trainer" asp-action="RemoveTrainer" asp-route-id="@trainer.TrainerId" class="btn btn-warning btn-sm me-2">
                            <i class="fas fa-edit"></i> Remove Trainer
                        </a>
                        <a asp-controller="Trainer" asp-action="Details" asp-route-id="@trainer.TrainerId" class="btn btn-warning btn-sm me-2">
                            <i class="fas fa-edit"></i> Details
                        </a>
                         <a asp-controller="Trainer" asp-action="Update" asp-route-id="@trainer.TrainerId" class="btn btn-warning btn-sm me-2">
                            <i class="fas fa-edit"></i> Update
                         </a>
                            
                        
                    </div>
                }
                else if(User.IsInRole("Trainer"))
				{
					<div class="text-end">
						<a asp-controller="Trainer" asp-action="Details" asp-route-id="@trainer.TrainerId" class="btn btn-warning btn-sm me-2">
							<i class="fas fa-edit"></i> Details
						</a>
						
					</div>
				}
                else if (User.IsInRole("User"))
                {
                    <div class="text-end">
                        <a asp-controller="Trainer" asp-action="Details" asp-route-id="@trainer.TrainerId" class="btn btn-warning btn-sm me-2">
                            <i class="fas fa-edit"></i> Details
                        </a>

                    </div>
                }


               
            </div>
        </div>
    }
</div>
@if (Model.TotalPages > 1)
{
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">

            <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                <a class="page-link"
                   asp-action="AllTrainers"
                   asp-route-gymId="@Model.SelectedGymId"
                   asp-route-specialtyId="@Model.SelectedSpecialtyId"
                   asp-route-page="@(Model.CurrentPage - 1)">
                    &laquo; Previous
                </a>
            </li>

            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(Model.CurrentPage == i ? "active" : "")">
                    <a class="page-link"
                       asp-action="AllTrainers"
                       asp-route-gymId="@Model.SelectedGymId"
                       asp-route-specialtyId="@Model.SelectedSpecialtyId"
                       asp-route-page="@i">
                        @i
                    </a>
                </li>
            }

            <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                <a class="page-link"
                   asp-action="AllTrainers"
                   asp-route-gymId="@Model.SelectedGymId"
                   asp-route-specialtyId="@Model.SelectedSpecialtyId"
                   asp-route-page="@(Model.CurrentPage + 1)">
                    Next &raquo;
                </a>
            </li>

        </ul>
    </nav>
}

