@model FitnessPlatform.Web.ViewModels.Food.FoodLogVM

<h2 class="text-center mb-4">Add Meals for Today</h2>

<form asp-action="Add" method="post">
    <div id="meals-container">
        @for (int i = 0; i < Model.Meals.Count; i++)
        {
            <div class="border p-3 mb-3">
                <div class="form-group">
                    <label asp-for="@Model.Meals[i].Description"></label>
                    <input asp-for="@Model.Meals[i].Description" class="form-control" />
                    <span asp-validation-for="@Model.Meals[i].Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Meals[i].Calories"></label>
                    <input asp-for="@Model.Meals[i].Calories" class="form-control" />
                    <span asp-validation-for="@Model.Meals[i].Calories" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Meals[i].Image"></label>
                    <input asp-for="@Model.Meals[i].Image" class="form-control" />
                    <span asp-validation-for="@Model.Meals[i].Image" class="text-danger"></span>
                </div>
            </div>
        }
    </div>

    <button type="submit" class="btn btn-success">Save Meals</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
