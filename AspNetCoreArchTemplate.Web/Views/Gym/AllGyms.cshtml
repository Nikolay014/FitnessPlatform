@{
   
}
@using FitnessPlatform.Web.ViewModels.Gym
@model PaginatedGymsVM

<link rel="stylesheet" href="~/css/AllGyms.css" asp-append-version="true" />

<div class="d-flex justify-content-between align-items-center mb-3" style="margin-top: 20px;">
    <h2>@ViewData["Title"]</h2>
    @if (User.IsInRole("Admin"))
    {
        <a asp-controller="Gym" asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Add Gym
        </a>
    }
</div>
<hr />
<form method="get" asp-action="AllGyms" class="d-flex mb-4">
    <input type="text" name="location" class="form-control me-2" placeholder="Filter by location"
           value="@Model.Location" />
    <input type="hidden" name="page" value="1" />
    <button type="submit" class="btn btn-outline-primary">Search</button>
</form>

<div class="container">
    <div class="row">
        @foreach (var gym in Model.Gyms)
        {
            <div class="col-md-4 mb-4 d-flex align-items-stretch">
                <div class="card gym-card w-100">
                    @if (!string.IsNullOrEmpty(gym.PrimaryImage))
                    {
                        <img src="@gym.PrimaryImage" class="card-img-top" style="max-height: 150px; object-fit: cover;" alt="@gym.Name">
                    }
                    else
                    {
                        <img src="~/images/default-image.jpg" class="card-img-top" style="max-height: 150px; object-fit: cover;" alt="No Image Available">
                    }

                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@gym.Name</h5>
                        <p class="card-text">Location: @gym.Location</p>

                        <div class="mt-auto">
                            <a asp-controller="Gym" asp-action="Details" asp-route-id="@gym.Id" class="btn btn-info w-100">
                                <i class="fas fa-info-circle"></i> Details
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
@if (Model.TotalPages > 1)
{
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center mt-4">

            <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                <a class="page-link"
                   asp-action="AllGyms"
                   asp-route-page="@(Model.CurrentPage - 1)"
                   asp-route-location="@Model.Location">
                    Previous
                </a>
            </li>

            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                    <a class="page-link"
                       asp-action="AllGyms"
                       asp-route-page="@i"
                       asp-route-location="@Model.Location">
                        @i
                    </a>
                </li>
            }

            <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                <a class="page-link"
                   asp-action="AllGyms"
                   asp-route-page="@(Model.CurrentPage + 1)"
                   asp-route-location="@Model.Location">
                    Next
                </a>
            </li>
        </ul>
    </nav>
}
