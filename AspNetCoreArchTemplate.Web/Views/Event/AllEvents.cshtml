@using FitnessPlatform.Web.ViewModels.Event
@model PaginatedEventsVM

<link rel="stylesheet" href="~/css/AllGyms.css" asp-append-version="true" />

<div class="d-flex justify-content-between align-items-center mb-3" style="margin-top: 20px;">
    <h2>@ViewData["Title"]</h2>
    @if (User.IsInRole("Admin"))
    {
        <a asp-controller="Event" asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Add Event
        </a>
    }
   
</div>
<hr />
<form method="get" asp-action="AllEvents" class="mb-4">
    <div class="row g-2 align-items-end">
        <div class="col-md-6">
            <label for="gymId" class="form-label">Select Gym</label>
            <select name="gymId" class="form-select">
                <option value="">-- All Gyms --</option>
                @foreach (var gym in Model.Gyms)
                {
                    <option value="@gym.Value" selected="@(Model.SelectedGymId?.ToString() == gym.Value)">
                        @gym.Text
                    </option>
                }
            </select>
        </div>
        <div class="col-md-6">
            <button type="submit" class="btn btn-primary w-100">🔍 Filter Events</button>
        </div>
    </div>
</form>

<div class="container">
    <div class="row">
        @foreach (var eventVM in Model.Events)
        {
            <div class="col-md-4 mb-4 d-flex align-items-stretch">
                <div class="card gym-card w-100">
                    @if (!string.IsNullOrEmpty(eventVM.Image))
                    {
                        <img src="@eventVM.Image" class="card-img-top" style="max-height: 150px; object-fit: cover;" alt="@eventVM.Title">
                    }
                    else
                    {
                        <img src="~/images/default-image.jpg" class="card-img-top" style="max-height: 150px; object-fit: cover;" alt="No Image Available">
                    }

                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@eventVM.Title</h5>
                        <p class="card-text">Place: @eventVM.Gym </p>
                        <p class="card-text">Trainer: @eventVM.Trainer </p>
                        <p class="card-text">Time: @eventVM.StartDate - @eventVM.EndDate</p>
                        


                        <div class="mt-auto">
                            <a asp-controller="Event" asp-action="Details" asp-route-id="@eventVM.Id" class="btn btn-info w-100">
                                <i class="fas fa-info-circle"></i> Details
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
@if (Model.TotalPages > 1)
{
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center mt-4">

            <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                <a class="page-link"
                   asp-action="AllEvents"
                   asp-route-page="@(Model.CurrentPage - 1)"
                   asp-route-gymId="@Model.SelectedGymId">
                    Previous
                </a>
            </li>

            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                    <a class="page-link"
                       asp-action="AllEvents"
                       asp-route-page="@i"
                       asp-route-gymId="@Model.SelectedGymId">
                        @i
                    </a>
                </li>
            }

            <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                <a class="page-link"
                   asp-action="AllEvents"
                   asp-route-page="@(Model.CurrentPage + 1)"
                   asp-route-gymId="@Model.SelectedGymId">
                    Next
                </a>
            </li>
        </ul>
    </nav>
}