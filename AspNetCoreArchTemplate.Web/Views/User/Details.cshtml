@using FitnessPlatform.Web.ViewModels.User
@model UserDetailsVM

<div class="container mt-5">
    <div class="card mx-auto shadow-lg p-4" style="max-width: 400px;">
        <div class="text-center">
            <img src="@(string.IsNullOrEmpty(Model.ImageUrl) ? Url.Content("~/images/default-avatar.jpg") : Model.ImageUrl)"
                 class="rounded-circle mb-3"
                 style="width: 120px; height: 120px; object-fit: cover;" alt="User Image" />

            <h4>@Model.FirstName @Model.LastName</h4>
            <p class="text-muted">@Model.Gender</p>
        </div>

        <hr />

        <div>
            <p><strong>Phone:</strong> @Model.PhoneNumber</p>
            <p><strong>Date of Birth:</strong> @Model.DateOfBirth.ToShortDateString()</p>
            <p><strong>Height:</strong> @Model.HeightCm cm</p>
            <p><strong>Weight:</strong> @Model.WeightKg kg</p>
            <p><strong>BMI:</strong> @(Model.BMI?.ToString("F2") ?? "N/A")</p>
        </div>

        <div class="text-center mt-3">
            <a asp-controller="Trainer" asp-action="GetTrainerClients" class="btn btn-outline-secondary">← Back to All Clients</a>


        </div>
    </div>
</div>

