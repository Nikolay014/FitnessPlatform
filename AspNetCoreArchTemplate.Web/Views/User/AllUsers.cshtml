@using FitnessPlatform.Web.ViewModels.User
@model PaginatedUserVM

@{
    ViewData["Title"] = "Users";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">All Users</h2>

    @foreach (var user in Model.Users)
    {
        <div class="card mb-3 shadow-sm rounded user-card">
            <div class="card-body d-flex align-items-center justify-content-between">
                <div class="d-flex align-items-center">
                    <img src="@(string.IsNullOrEmpty(user.Image) ? Url.Content("~/images/default-avatar.jpg") : user.Image)"
                         class="rounded-circle me-3"
                         style="width: 60px; height: 60px; object-fit: cover;" alt="Avatar" />

                    <div>
                        <h5 class="mb-1">@user.FullName</h5>
                        <p class="mb-1"><strong>Gender:</strong> @user.Gender</p>
                        <p class="mb-0"><strong>Phone:</strong> @user.PhoneNumber</p>
                    </div>
                </div>

                <div class="text-end">
                    <a asp-controller="User" asp-action="MakeItTrainer" asp-route-id="@user.Id" class="btn btn-warning btn-sm me-2">
                        <i class="fas fa-edit"></i> Make Trainer
                    </a>
                    <a asp-controller="User" asp-action="Details" asp-route-id="@user.Id" class="btn btn-warning btn-sm me-2">
                        <i class="fas fa-edit"></i> Details
                    </a>
                    <a asp-controller="DailyLog" asp-action="MyLog" asp-route-id="@user.Id" class="btn btn-warning btn-sm me-2">
                        <i class="fas fa-edit"></i> Records
                    </a>
                    
                </div>
            </div>
        </div>
    }
</div>
@if (Model.TotalPages > 1)
{
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">

            <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                <a class="page-link"
                   asp-action="AllUsers"
                   
                   asp-route-page="@(Model.CurrentPage - 1)">
                    &laquo; Previous
                </a>
            </li>

            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(Model.CurrentPage == i ? "active" : "")">
                    <a class="page-link"
                       asp-action="AllUsers"
                       
                       asp-route-page="@i">
                        @i
                    </a>
                </li>
            }

            <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                <a class="page-link"
                   asp-action="AllUsers"
                  
                   asp-route-page="@(Model.CurrentPage + 1)">
                    Next &raquo;
                </a>
            </li>

        </ul>
    </nav>
}
